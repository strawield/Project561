@model IEnumerable<bookReview.Models.Book>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
@using (Html.BeginForm())
{
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>BookList</title>
    </head>
    <body>
        <p>
            @Html.ActionLink("Create New", "CreateBook")
        </p>

        @Html.TextBox("search") <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)

                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>

                    <td>
                        @Html.ActionLink("Comments", "Comments", new { id = item.BookID }) |
                        @Html.ActionLink("Rating", "Rating", new { id = item.BookID })

                    </td>
                </tr>

            }

        </table>
        <div>
            @Html.ActionLink("Log In", "LogIn")
        </div>
        <div>
            @Html.ActionLink("Register", "Register")
        </div>
        <div>
            @Html.ActionLink("Log Out", "LogOut")
        </div>
    </body>
}
</html>
